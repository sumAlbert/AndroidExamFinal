<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell2.androidexamfinal.MainActivity">

    <include layout="@layout/title_layout_oo" />
    <!--scrollview只能有一个linearlayout 但其中可以有无限多的子元素-->
    <!--scrollview相比于linearlayout可以无限下拉-->
    <!--相比于listview 需要写每一项内容-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/ZQ"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_standard_item"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ZQ"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/font_input"
                    android:textColor="@color/font_weight">
                </TextView>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/next_gray">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/WY"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_standard_item"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WY"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/font_input"
                    android:textColor="@color/font_weight">
                </TextView>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/next_gray">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/MO"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_standard_item"
                android:orientation="horizontal">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MO"
                    android:layout_marginLeft="15dp"
                    android:textSize="@dimen/font_input"
                    android:textColor="@color/font_weight">
                </TextView>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/next_gray">
                </ImageView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
